<h1>All Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task_path(task)  do %>
        <div>
          <input type="checkbox" <%= task.completed ? "checked" : ""%> ><%= task.title %>
          <%= link_to "🗑️", task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "+ Add a new task", new_task_path %>
